<h2>Swap</h2>
<p>Регистрация</p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
    <% flash.each do |key, value| %>
       <div class="flash <%= key %>"><%= value %></div>
    <% end %>

  <div class="field">
    <%= f.email_field :email, placeholder:"E-mail", autofocus: true %>
    <i class="fa fa-user" aria-hidden="true"></i>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
     <span class="minimum_password_length">(<%= @minimum_password_length %> символов минимум)</span>
    <% end %><br />
    <%= f.password_field :password, placeholder:"Пароль", autocomplete: "off" %>
    <i class="fa fa-lock top_padding" aria-hidden="true"></i>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, placeholder:"Повторите пароль", autocomplete: "off" %>
    <i class="fa fa-lock" aria-hidden="true"></i>
  </div>

  <div class="actions">
    <%= f.submit "Зарегистрироваться", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

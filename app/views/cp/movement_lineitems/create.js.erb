<% unless @movement_lineitem.errors.any? %>
	$("#lineitems_rows").append("<%= j render(:partial => 'cp/movements/lineitems_table_row', :locals => { lineitem: @movement_lineitem } ) %>");
<% else %>
	$("#info_block").html("<%= j render(:partial => 'cp/shared/errors', :locals => { entity: @movement_lineitem } ) %>");
	$("#info_block .alert").slideToggle();

	setTimeout(function(){
		$("#info_block .alert").slideToggle("normal", function(){
			$("this").remove();
		});
	}, 1500);
	
<% end %>